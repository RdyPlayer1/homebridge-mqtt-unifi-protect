{
  "pluginAlias": "MqttUnifiProtectPlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "mqttHost": {
        "title": "MQTT Broker Host",
        "type": "string",
        "default": "192.168.1.10"
      },
      "mqttPort": {
        "title": "MQTT Broker Port",
        "type": "number",
        "default": 1883
      },
      "mqttUsername": {
        "title": "MQTT Username",
        "type": "string"
      },
      "mqttPassword": {
        "title": "MQTT Password",
        "type": "string"
      },
      "exitDelay": {
        "title": "Exit Delay (seconds)",
        "type": "number",
        "default": 30
      },
      "alarmDuration": {
        "title": "Alarm Duration (seconds)",
        "type": "number",
        "default": 120
      },
      "enableSiren": {
        "title": "Enable Siren Switch",
        "type": "boolean",
        "default": true
      },
      "devices": {
        "title": "Named Devices (Optional)",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "title": "Device Name" },
            "mac": { "type": "string", "title": "MAC Address (no colons)" },
            "type": {
              "type": "string",
              "enum": ["contact", "motion"],
              "title": "Sensor Type"
            },
            "armHome": { "type": "boolean", "title": "Arm in Home Mode" },
            "armAway": { "type": "boolean", "title": "Arm in Away Mode" },
            "monitorOff": { "type": "boolean", "title": "Monitor When Off" },
            "entryDelay": {
              "type": "number",
              "title": "Entry Delay (seconds)",
              "default": 0
            }
          }
        }
      }
    }
  }
}
